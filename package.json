{
  "name": "performance-k6-typescript",
  "version": "1.0.0",
  "description": "k6 Performance Testing Framework with TypeScript support",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "test": "npm run test:load",
    "test:smoke": "podman run --rm -v .:/app:Z -w /app grafana/k6:latest run --vus 1 --duration 30s dist/load-test.js",
    "test:load": "podman run --rm -v .:/app:Z -w /app grafana/k6:latest run dist/load-test.js",
    "test:stress": "podman run --rm -v .:/app:Z -w /app grafana/k6:latest run dist/stress-test.js",
    "test:spike": "podman run --rm -v .:/app:Z -w /app grafana/k6:latest run dist/spike-test.js",
    "test:endurance": "podman run --rm -v .:/app:Z -w /app grafana/k6:latest run dist/endurance-test.js",
    "test:all": "npm run test:smoke && npm run test:load && npm run test:stress",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "k6",
    "performance-testing",
    "load-testing",
    "typescript",
    "api-testing"
  ],
  "author": "Antonio Crespo <Antonio.Crespo@endava.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/k6": "^0.52.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
